                @Html.Action("SanPhamTuongTu", "Home")
            </div>
        </div>
    </div>
</div>





<script>
    async function sendMessage() {
        let message = document.getElementById("message").value;
        let response = await fetch("/api/chatgpt/send", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ message })
        });

        if (!response.ok) {
            document.getElementById("response").innerText = "Lỗi API: " + response.status;
            return;
        }

        let data = await response.json();
        document.getElementById("response").innerText = data.Reply || "Không có phản hồi từ server";
    }

</script>
