@model SHOP_DIENTHOAI.Models.NGUOI_DUNG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var useReg = Session["useReg"] as SHOP_DIENTHOAI.Models.NGUOI_DUNG;
}

<style>
        .Name_Form {
            text-align: center;
            font-size: 35px;
            color: #ea1919;
            padding: 20px 25px;
            font-weight: bolder;
            text-shadow: 2px 2px 4px black;
        }

        .form-group {
            font-size: 20px;
            color: red;
        }
    </style>


<div class="container-fluid">

    <div class="container w-25 py-5" style="background-color: #efe9e9; border-radius: 15px">

        @using (Html.BeginForm("DangKy", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <form class="form container">

                <hr />
                <div class="Name_Form">
                    Đăng ký Tài Khoản
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class=" col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TEN_ND, "Người dùng", htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.TEN_ND, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TEN_ND, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MATKHAU, "Mật khẩu", htmlAttributes: new { @for = "MatKhau" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.EMAIL, htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.EMAIL, "Email", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DIEN_THOAI, "Số điện thoại", htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DIEN_THOAI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIEN_THOAI, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DIA_CHI, "Địa Chỉ", htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="container-fluid Name_Form">
                    <div class="row w-25">
                        <input type="submit" value="Đăng ký" class="btn btn-success" style="width:280px" />
                    </div>
                </div>
                @*<div class="container-fluid">
                        @{ if (ViewBag.isReg == true)
                            {
                                <div class="container">
                                    @ViewBag.RegOk
                                </div>
                                <div class="row justify-content-center">
                                    <a class=" btn btn-primary" style="color:white" href="/User/DangNhap"> Đăng nhập</a>
                                </div>
                            }
                        }
                    </div>*@
            </form>
        }
    </div>

<script>
     window.onload = function () {
     var successMessage = "@Html.Raw(TempData["SuccessMessage"])";
     if (successMessage.trim() !== "") {
         alert(successMessage);
         window.location.href = '/User/DangNhap';
     }
    };
</script>

