@model SHOP_DIENTHOAI.Models.LOGIN_MODEL
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .Name_Form {
        text-align: center;
        font-size: 35px;
        color: #ea1919;
        padding: 20px 25px;
        font-weight: bolder;
        text-shadow: 2px 2px 4px black;
    }

    .form-group {
        font-size: 20px;
        color: red;
    }
</style>

<link rel="stylesheet" href="index.css" />


<div class="container-fluid">
    <div class="container w-25 py-5" style="background-color:#efe9e9;border-radius:15px">
        @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <form class="form-container">
                <hr />
                <div class="Name_Form">
                    Đăng Nhập
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="container-fluid Name_Form">
                    <div class="row w-25">
                        <input type="submit" value="Đăng Nhập" class="btn btn-success" style="width:280px" />
                    </div>
                </div>
            </form>
        }
    </div>
</div>

<script>
    window.onload = function () {
        var errorMessage = "@Html.Raw(TempData["Fail"])";
        var successMessage = "@Html.Raw(TempData["Success"])";

        if (errorMessage.trim()) {
            alert(errorMessage);
        }
        if (successMessage.trim()) {
            alert(successMessage);
        }
    };
</script>



