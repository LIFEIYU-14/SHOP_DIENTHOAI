@model SHOP_DIENTHOAI.Models.NGUOI_DUNG

@{
    ViewBag.Title = "Chỉnh sửa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary fw-bold">Chỉnh sửa thông tin người dùng</h2>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MA_ND)

            <div class="row">
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.TEN_ND, "Tên người dùng", new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.TEN_ND, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên người dùng" } })
                    @Html.ValidationMessageFor(model => model.TEN_ND, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.EMAIL, "Email", new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.DIEN_THOAI, "Số điện thoại", new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.DIEN_THOAI, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                    @Html.ValidationMessageFor(model => model.DIEN_THOAI, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.MATKHAU, "Mật khẩu", new { @class = "form-label fw-semibold" })
                    <div class="input-group">
                        @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Nhập mật khẩu mới" } })
                        <button class="btn btn-outline-secondary toggle-password" type="button">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.ID_Quyen, "Quyền người dùng", new { @class = "form-label fw-semibold" })
                    @Html.DropDownListFor(model => model.ID_Quyen, ViewBag.ID_Quyen as SelectList, "-- Chọn quyền --", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.ID_Quyen, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.DIA_CHI, "Địa chỉ", new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.DIA_CHI, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
                    @Html.ValidationMessageFor(model => model.DIA_CHI, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save"></i> Lưu thông tin
                </button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2 px-4" })
            </div>
        }
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".toggle-password").click(function () {
            var input = $(this).prev();
            if (input.attr("type") === "password") {
                input.attr("type", "text");
                $(this).html('<i class="fas fa-eye-slash"></i>');
            } else {
                input.attr("type", "password");
                $(this).html('<i class="fas fa-eye"></i>');
            }
        });
    });
</script>
