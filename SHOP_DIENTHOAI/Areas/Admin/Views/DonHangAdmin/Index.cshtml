@model IEnumerable<SHOP_DIENTHOAI.Models.DON_HANG>
@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<!-- Các style tùy chỉnh để tăng font chữ -->
<style>
    .card-header h2 {
        font-size: 2rem;
    }

    .card-body,
    table,
    th,
   
    .btn {
        font-size: 1.2rem;
    }
    td {
        font-size: 1.8rem;
    }
    table {
        font-size: 1.1rem;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-secondary text-white text-center">
            <h2>Danh sách đơn hàng</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Họ tên khách hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Tình trạng đơn hàng</th>
                        <th>Hình thức thanh toán</th>
                        <th>Địa chỉ nhận hàng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NGUOI_DUNG.TEN_ND</td>
                            <td>@Html.DisplayFor(modelItem => item.NGAY_DAT)</td>
                            <td>
                                @if (item.TINH_TRANG == 0)
                                {
                                    <span class="badge bg-danger">Đang chờ xác nhận</span>
                                }
                                else if (item.TINH_TRANG == 1)
                                {
                                    <span class="badge bg-warning">Đang giao hàng</span>
                                }
                                else if (item.TINH_TRANG == 2)
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                            </td>
                            <td>
                                @if (item.THANHTOAN == 1)
                                {
                                    <span class="badge bg-primary">Tiền mặt</span>
                                }
                                else if (item.THANHTOAN == 2)
                                {
                                    <span class="badge bg-danger">Chuyển khoản</span>
                                }
                            </td>
                            <td>@item.DIACHI_NHANHANG</td>
                            <td>
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.MA_DON }, new { @class = "btn btn-outline-primary btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
