@model SHOP_DIENTHOAI.Models.PHAN_QUYEN

@{
    ViewBag.Title = "Sửa quyền";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container w-50 mt-4 p-4 border rounded shadow bg-light">
    <h2 class="text-center text-warning mb-4">Chỉnh sửa quyền</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID_Quyen)

        <div class="mb-3">
            @Html.LabelFor(model => model.Ten_Quyen, "Tên quyền", new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.Ten_Quyen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên quyền..." } })
            @Html.ValidationMessageFor(model => model.Ten_Quyen, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu thay đổi</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
        </div>
    }
</div>
